package com.feb;

public class MaxLenSquareString {

	public static void main(String[] args) {
		String str = "ababa";
		int maxLen = getMaxLenSquareString(str);
		System.out.println(maxLen);
	}

	private static int getMaxLenSquareString(String str) {
		int maxLen = 1;
		for (int i = 0; i < str.length(); i++) {
			int currLen = getMaxLengthSquare(str.substring(0,i).toCharArray(),str.substring(i,str.length()).toCharArray());
			if(currLen > maxLen)
				maxLen = currLen;
		}
		return maxLen;
	}

	private static int getMaxLengthSquare(char[] str1, char[] str2) {
		int m = str1.length;
		int n = str2.length;
		
		if(m == 0 || n == 0)
			return Integer.MIN_VALUE;
		
		int dp[][] = new int[m][n];
		
		for (int i = 0; i < m; i++) {
			if(str1[i] == str2[0])
				dp[i][0] = 1;
			if(i > 0)
				dp[i][0] += dp[i-1][0];
		}
		
		if(dp[0][0] > 0){
			for (int j = 1; j < n; j++) {
				dp[0][j] = dp[0][j-1];
			}
		}
		
		for (int i = 1; i < m; i++) {
			for (int j = 1; j < n; j++) {
				dp[i][j] = Integer.max(dp[i-1][j],Integer.max(dp[i][j-1],dp[i-1][j-1]));
				if(str1[i] == str1[j])
					dp[i][j] += dp[i-1][j-1];
			}
		}
		
		return dp[m-1][n-1];
	}

}
